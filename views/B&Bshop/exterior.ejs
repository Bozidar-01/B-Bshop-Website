<%- include('./partials/shopHeader')  %>
       <!-- Header-->
       <header class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Shop in style</h1>
                <p class="lead fw-normal text-white-50 mb-0">It's A Never Ending Battle Of Making Your Cars Better.</p>
            </div>
        </div>
    </header>
        <!-- Section-->

       

        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                  
                    <% for(var i=0; i<exteriorProducts.length; i++ ) { %>

                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Sale badge-->
                            <a class="productLink" href="./shop/<%-exteriorProducts[i].id%>">
                                <% if(- exteriorProducts[i].price  && exteriorProducts[i].stock!=0)  {%>

                                    <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>

                            <% }else if (- exteriorProducts[i].stock==0 ){%> 
                                <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Out Of Stock</div>

                                <% } else{%>
                            
                                    <% } %> 
                            <!-- Product image-->
                            <img class="card-img-top" src="<%- exteriorProducts[i].products_img%>" alt="..." />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder"><%- exteriorProducts[i].name %> </h5>
                                    <!-- Product price-->
                                    <% if( - exteriorProducts[i].stock!=0 ) {%>

                                    <span class="text-muted text-decoration-line-through"><%- exteriorProducts[i].price %> </span>
                                   <h5><%- exteriorProducts[i].sale %> MKD</h5> 

                                   <% }else if ( - exteriorProducts[i].price!=0 ){%>                                  
                                    <span class="text-muted "><%- exteriorProducts[i].price %> MKD</span>
                                    <% } else{ %> 
                                        <span class="text-muted "><%- exteriorProducts[i].sale %> MKD</span> 
                                        <% } %> 
                                </div>
                            </div>
                        </a>
                            <!-- Product actions-->

                            <% if( - exteriorProducts[i].stock!=0 ) {%>
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Add to cart</a></div>
                            </div>

                            <% }else{%> 

                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto">Out Of Stock</a></div>
                            </div>

                            <% }  %> 
                        </div>
                    </div>
                    <% } %> 
            
                  
                </div>
            </div>
        </section>

      
        <%- include('./partials/shopFooter')  %>